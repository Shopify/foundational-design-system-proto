{
  "name": "@polaris/atoms",
  "version": "0.0.0",
  "author": "Shopify",
  "license": "MIT",
  "main": "./dist/polaris-atoms.cjs.js",
  "module": "./dist/polaris-atoms.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/polaris-atoms.es.js",
      "require": "./dist/polaris-atoms.cjs.js"
    },
    "./styles": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "yarn build:js && yarn build:types",
    "build:js": "vite build",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "watch": "vite build --watch"
  },
  "dependencies": {
    "@polaris/themes": "*"
  },
  "peerDependencies": {
    "@vanilla-extract/css": "^1.2.1",
    "@vanilla-extract/sprinkles": "^1.0.0",
    "react": "^16.8 || ^17.0"
  }
}
