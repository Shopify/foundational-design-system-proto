{
  "name": "polaris-prototype",
  "version": "0.0.0",
  "private": true,
  "author": "Shopify",
  "license": "MIT",
  "scripts": {
    "dev": "manypkg run site dev",
    "build": "preconstruct build",
    "start": "yarn start:site",
    "start:site": "manypkg run site start",
    "build:site": "manypkg run site build",
    "postinstall": "preconstruct dev",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "type-check": "tsc",
    "test": "yarn lint && yarn type-check"
  },
  "workspaces": [
    "packages/*",
    "site"
  ],
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@changesets/cli": "^2.16.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.0",
    "@shopify/eslint-plugin": "^40.2.3",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@vanilla-extract/babel-plugin": "^1.0.0",
    "@vanilla-extract/css": "^1.0.0",
    "@vanilla-extract/sprinkles": "^0.4.2",
    "@vanilla-extract/webpack-plugin": "^1.0.2",
    "eslint": "7.28.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ],
    "globals": {
      "react": "React"
    }
  }
}
