{
  "name": "polaris-prototype",
  "version": "0.0.0",
  "private": true,
  "author": "Shopify",
  "license": "MIT",
  "scripts": {
    "dev": "manypkg run site dev",
    "build": "preconstruct build",
    "start": "yarn start:site",
    "start:site": "manypkg run site start",
    "build:site": "manypkg run site build",
    "postinstall": "preconstruct dev",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "type-check": "tsc",
    "test": "yarn lint && yarn type-check"
  },
  "workspaces": [
    "packages/*",
    "site"
  ],
  "dependencies": {
    "@radix-ui/react-polymorphic": "^0.0.11",
    "@stitches/react": "^0.1.9",
    "polished": "^4.1.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^40.2.3",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "eslint": "^7.27.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ],
    "globals": {
      "react": "React"
    }
  }
}
