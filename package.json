{
  "name": "polaris-prototype",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "type-check": "tsc"
  },
  "dependencies": {
    "@radix-ui/react-polymorphic": "^0.0.11",
    "@stitches/react": "^0.1.9",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^40.2.3",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "eslint": "^7.27.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "typescript": "^4.1.2",
    "vite": "^2.3.4"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:@shopify/typescript",
      "plugin:@shopify/react",
      "plugin:@shopify/jest",
      "plugin:@shopify/node",
      "plugin:@shopify/prettier"
    ],
    "settings": {
      "react": {
        "version": "17.0.0"
      }
    },
    "rules": {
      "react/display-name": 0
    }
  }
}
