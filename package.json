{
  "name": "polaris",
  "private": true,
  "author": "Shopify",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all --parallel",
    "site": "nx run website:serve",
    "dep-graph": "nx dep-graph",
    "dep-graph:affected": "yarn nx affected:dep-graph",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "version": "changeset version && yarn",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.16.0",
    "@shopify/eslint-plugin": "^40.2.3",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vanilla-extract/css": "^1.2.1",
    "@vanilla-extract/sprinkles": "^1.0.0",
    "@vanilla-extract/vite-plugin": "^1.1.1",
    "concurrently": "^6.2.1",
    "eslint": "^7.27.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "react": "^17.0.0",
    "typescript": "^4.3.2",
    "vite": "^2.4.4"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "devDependencies": {
    "@nrwl/next": "latest",
    "@nrwl/cli": "latest",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/tao": "latest",
    "@nrwl/workspace": "latest",
    "@wanews/nx-vite": "^0.4.2"
  }
}
