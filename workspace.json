{
  "version": 2,
  "projects": {
    "@polaris/components": {
      "root": "packages/components",
      "sourceRoot": "packages/components/src",
      "projectType": "library",
      "targets": {
        "build-base": {
          "executor": "@wanews/nx-vite:build",
          "outputs": ["packages/components/dist"],
          "dependsOn": [
            {
              "target": "build",
              "projects": "dependencies"
            }
          ]
        },
        "build": {
          "executor": "@nrwl/workspace:tsc",
          "options": {
            "main": "packages/components/src/index.ts",
            "outputPath": "packages/components/dist/types",
            "tsConfig": "packages/components/tsconfig.json"
          },
          "dependsOn": [
            {
              "target": "build-base",
              "projects": "self"
            }
          ]
        }
      }
    },
    "@polaris/icons": {
      "root": "packages/icons",
      "type": "library"
    },
    "@polaris/tokens": {
      "root": "packages/tokens",
      "sourceRoot": "packages/tokens/src",
      "projectType": "library",
      "targets": {
        "build-base": {
          "executor": "@wanews/nx-vite:build",
          "outputs": ["packages/tokens/dist"],
          "dependsOn": [
            {
              "target": "build",
              "projects": "dependencies"
            }
          ]
        },
        "build": {
          "executor": "@nrwl/workspace:tsc",
          "options": {
            "main": "packages/tokens/src/index.ts",
            "outputPath": "packages/tokens/dist/types",
            "tsConfig": "packages/tokens/tsconfig.json"
          },
          "dependsOn": [
            {
              "target": "build-base",
              "projects": "self"
            }
          ]
        }
      }
    },
    "website": {
      "root": "website",
      "sourceRoot": "website/src",
      "outputs": ["websire/dist"],
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@wanews/nx-vite:build",
          "outputs": ["packages/components/dist"],
          "dependsOn": [
            {
              "target": "build",
              "projects": "dependencies"
            }
          ]
        },
        "serve": {
          "executor": "@wanews/nx-vite:serve",
          "buildTarget": "build"
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/react"
  },
  "generators": {
    "@wanews/nx-vite:react": {}
  }
}
