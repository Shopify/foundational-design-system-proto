{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@polaris/components": ["packages/components/src/index.ts"],
      "@polaris/tokens": ["packages/tokens/src/index.ts"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "./jest.setup.ts",
    "packages/**/*",
    "website/**/*",
  ]
}
